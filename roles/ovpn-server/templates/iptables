*nat
:PREROUTING ACCEPT
:INPUT ACCEPT
:OUTPUT ACCEPT
:POSTROUTING ACCEPT
-A POSTROUTING -s {{ openvpn_ipv4_subnet }} -o {{ openvpn_public_interface }} -j MASQUERADE
COMMIT

*filter
:INPUT DROP
:FORWARD DROP
:OUTPUT ACCEPT
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
-A INPUT -p icmp -j ACCEPT
-A INPUT -i lo -j ACCEPT
-A INPUT -i {{ openvpn_dev }} -j ACCEPT
-A INPUT -p tcp -m state --state NEW -m tcp --dport 22 -j ACCEPT
-A INPUT -p {{ openvpn_proto }} -m state --state NEW -m {{ openvpn_proto }} --dport {{ openvpn_port }} -j ACCEPT
-A FORWARD -i {{ openvpn_dev }} -j ACCEPT
-A FORWARD -o {{ openvpn_dev }} -m state --state RELATED,ESTABLISHED -j ACCEPT
COMMIT
